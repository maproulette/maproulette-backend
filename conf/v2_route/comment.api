# parameters:
#   - name: id
#     in: path
#     description: The ID for the Task
#   - name: commentId
#     in: path
#     description: The ID for the Comment
###
DELETE  /task/:id/comment/:commentId                @org.maproulette.framework.controller.CommentController.delete(id:Long, commentId:Long)
